@{
    ViewData["Title"] = "Фотография";
    var photographyStyles = new List<string>
    {
        "Photography | Aerial", "Photography | Architecture", "Photography | Black and White",
        "Photography | Cinematic", "Photography | Documentary", "Photography | Experimental",
        "Photography | Fashion", "Photography | Fashion Editorial", "Photography | Fine Art",
        "Photography | Flower", "Photography | Food", "Photography | Landscape",
        "Photography | Long exposure", "Photography | Low key", "Photography | Macro",
        "Photography | Microscopic", "Photography | Minimalist", "Photography | Mockup",
        "Photography | Night", "Photography | Pet", "Photography | Portrait",
        "Photography | Portrait > Cinematic", "Photography | Portrait > Closeup",
        "Photography | Portrait > Fantasy", "Photography | Product", "Photography | Reflection",
        "Photography | Sport", "Photography | Still Life", "Photography | Surreal",
        "Photography | Time-lapse", "Photography | Underwater", "Photography | Vintage",
        "Photography | Wildlife"
    };
    var prefixToRemove = "Photography | ";
}

<div class="container">
    <h1 class="display-4 mb-4 text-center">Фотография</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="row g-3">
                @for (int i = 0; i < photographyStyles.Count; i++)
                {
                    var fullStyleName = photographyStyles[i];
                    var buttonText = fullStyleName;
                    if (fullStyleName.StartsWith(prefixToRemove))
                    {
                        buttonText = fullStyleName.Substring(prefixToRemove.Length);
                    }
                    var btnNumericId = i + 1; // 1-based ID
                    <div class="col-6">
                        <button class="btn btn-primary w-100 py-3" id="photography-btn-@btnNumericId" data-btn-type="photography" data-btn-id="@btnNumericId" data-extra-param="@fullStyleName">
                            @buttonText
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>       
        $(document).ready(function() {
            // Извикване на новата универсална функция за бутоните от тип "painting"
            newButtonsFunctionality('photography');
            // Почистване на стари елементи за потвърждение, специфични за тази страница, ако е необходимо.
            // Ако такива елементи вече не се генерират, тези редове може да не са нужни.
            $('.confirmation-message-wrapper').remove(); 
            $('.alert.alert-success.alert-dismissible').remove(); // По-общо премахване на alert-и
        });
    </script>
} 