@{
    ViewData["Title"] = "Вектор";
    var vectorStyles = new List<string>
    {
        "Vector | Coloring Book Page","Vector | Flat Art Style","Vector | Line Art",
        "Vector | Logo Symbol","Vector | Silhouette","Vector | Silhouette Cute",
    };
    var prefixToRemove = "Vector | ";
}

<div class="container">
    <h1 class="display-4 mb-4 text-center">Вектор</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="row g-3">
                @for (int i = 0; i < vectorStyles.Count; i++)
                {
                    var fullStyleName = vectorStyles[i];
                    var buttonText = fullStyleName;
                    if (fullStyleName.StartsWith(prefixToRemove))
                    {
                        buttonText = fullStyleName.Substring(prefixToRemove.Length);
                    }
                    var btnNumericId = i + 1; // 1-based ID
                    <div class="col-6">
                        <button class="btn btn-primary w-100 py-3" id="vector-btn-@btnNumericId" data-btn-type="vector" data-btn-id="@btnNumericId">
                            @buttonText
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>       
        $(document).ready(function() {
            // Извикване на новата универсална функция за бутоните от тип "painting"
            newButtonsFunctionality('vector');
            // Почистване на стари елементи за потвърждение, специфични за тази страница, ако е необходимо.
            // Ако такива елементи вече не се генерират, тези редове може да не са нужни.
            $('.confirmation-message-wrapper').remove(); 
            $('.alert.alert-success.alert-dismissible').remove(); // По-общо премахване на alert-и
        });
    </script>
} 

