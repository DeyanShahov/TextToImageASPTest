@{
    ViewData["Title"] = "Рисунка";
    var drawingStyles = new List<string>
    {
        "Drawing | Blue Ballpoint Pen","Drawing | Caricature","Drawing | Caricature Extreme",
        "Drawing | Charcoal","Drawing | Colored Pencil","Drawing | Graphite","Drawing | Ink",
        "Drawing | Pastel","Drawing | Pen","Drawing | Pencil","Drawing | Scratchboard",
        "Drawing | Technical","Drawing | Zentangle",
    };
    var prefixToRemove = "Drawing | ";
}

<div class="container">
    <h1 class="display-4 mb-4 text-center">Рисунка</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="row g-3">
                @for (int i = 0; i < drawingStyles.Count; i++)
                {
                    var fullStyleName = drawingStyles[i];
                    var buttonText = fullStyleName;
                    if (fullStyleName.StartsWith(prefixToRemove))
                    {
                        buttonText = fullStyleName.Substring(prefixToRemove.Length);
                    }
                    var btnNumericId = i + 1; // 1-based ID
                    <div class="col-6">
                        <button class="btn btn-primary w-100 py-3" id="drawing-btn-@btnNumericId" data-btn-type="drawing" data-btn-id="@btnNumericId" data-extra-param="@fullStyleName">
                            @buttonText
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>       
        $(document).ready(function() {
            // Извикване на новата универсална функция за бутоните от тип "painting"
            newButtonsFunctionality('drawing');
            // Почистване на стари елементи за потвърждение, специфични за тази страница, ако е необходимо.
            // Ако такива елементи вече не се генерират, тези редове може да не са нужни.
            $('.confirmation-message-wrapper').remove(); 
            $('.alert.alert-success.alert-dismissible').remove(); // По-общо премахване на alert-и
        });
    </script>
} 