@{
    ViewData["Title"] = "Илюстрация";
    var illustrationStyles = new List<string>
    {
        "Illustration | Art Deco","Illustration | Anime","Illustration | Anime > Chibi","Illustration | Anime > Kawaii",
        "Illustration | Anime > Mecha","Illustration | Anime > Realistic","Illustration | Cartoon",
        "Illustration | Cartoon Character on White BG","Illustration | Children's book","Illustration | Fantasy",
        "Illustration | Fantasy Cartoon on White BG","Illustration | Fashion","Illustration | Game Art","Illustration | Illuminated Manuscript",
        "Illustration | Pop Art","Illustration | Retro","Illustration | Modern","Illustration | Modernism",
        "Illustration | Sticker","Illustration | Sticker Cute","Illustration | Sticker Watercolor",
    };
    var prefixToRemove = "Illustration | ";
}

<div class="container">
    <h1 class="display-4 mb-4 text-center">Илюстрация</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="row g-3">
                @for (int i = 0; i < illustrationStyles.Count; i++)
                {
                    var fullStyleName = illustrationStyles[i];
                    var buttonText = fullStyleName;
                    if (fullStyleName.StartsWith(prefixToRemove))
                    {
                        buttonText = fullStyleName.Substring(prefixToRemove.Length);
                    }
                    var btnNumericId = i + 1; // 1-based ID
                    <div class="col-6">
                        <button class="btn btn-primary w-100 py-3" id="illustration-btn-@btnNumericId" data-btn-type="illustration" data-btn-id="@btnNumericId" data-extra-param="@fullStyleName">
                            @buttonText
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>       
        $(document).ready(function() {
            // Извикване на новата универсална функция за бутоните от тип "painting"
            newButtonsFunctionality('illustration');
            // Почистване на стари елементи за потвърждение, специфични за тази страница, ако е необходимо.
            // Ако такива елементи вече не се генерират, тези редове може да не са нужни.
            $('.confirmation-message-wrapper').remove(); 
            $('.alert.alert-success.alert-dismissible').remove(); // По-общо премахване на alert-и
        });
    </script>
} 